# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Port
PORT=5001

# MongoDB Connection String
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/tt-tournament

# For MongoDB Atlas (cloud), use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tt-tournament?retryWrites=true&w=majority

# For custom MongoDB connection:
# MONGODB_URI=mongodb://your-host:27017/tt-tournament

# CORS Configuration (optional - comma separated origins)
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001
